      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/vnd.oai.openapi:
              schema:
                type: object
                additionalProperties: {}
            application/yaml:
              schema:
                type: object
                additionalProperties: {}
            application/vnd.oai.openapi+json:
              schema:
                type: object
                additionalProperties: {}
            application/json:
              schema:
                type: object
                additionalProperties: {}
          description: ''
  /transformer/heuristic/create/:
    post:
      operationId: transformer_heuristic_create_create
      tags:
      - transformer
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/TransformerHeuristicCreateRequest'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/TransformerHeuristicCreateRequest'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/TransformerHeuristicCreateRequest'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/TransformerHeuristicCreateResponse'
          description: ''
components:
  schemas:
    TransformerHeuristicCreateRequest:
      type: object
      properties:
        input_entry:
          type: string
        existing_heuristic:
          type: string
        user_guidance:
          type: string
      required:
      - input_entry
    TransformerHeuristicCreateResponse:
      type: object
      properties:
        new_heuristic:
          type: string
        rationale:
          type: string
      required:
      - new_heuristic
      - rationale
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
    cookieAuth:
      type: apiKey
      in: cookie
      name: sessionid
